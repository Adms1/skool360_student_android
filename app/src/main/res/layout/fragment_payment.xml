<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@android:color/white"
    android:orientation="vertical"
    android:paddingTop="@dimen/_5sdp"
    android:weightSum="1">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_50sdp"
        android:background="@drawable/hedar_1">

        <Button
            android:id="@+id/btnMenu"
            android:layout_width="@dimen/_23sdp"
            android:layout_height="@dimen/_23sdp"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="@dimen/_1sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_1sdp"
            android:background="@drawable/menu_btn_blue" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_10sdp"
            android:text="PAYMENT"
            android:textColor="@android:color/white"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />
        <LinearLayout
            android:id="@+id/linearBack"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_23sdp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentLeft="true">
        <Button
            android:id="@+id/btnBackUnitTest"
            android:layout_width="@dimen/_13sdp"
            android:layout_height="@dimen/_15sdp"
           android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_10sdp"
            android:background="@drawable/back_btn" />
        </LinearLayout>
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/textbox_color"
                android:stretchColumns="*">

                <TableRow
                    android:id="@+id/tableRow1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_margin="0.3dp"
                        android:layout_weight="2"
                        android:background="@color/payment_screen"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="@dimen/_5sdp"
                        android:text="DETAILS"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_margin="0.3dp"
                        android:layout_weight="1.6"
                        android:background="@color/payment_screen"
                        android:gravity="center_vertical|right"
                        android:paddingRight="@dimen/_5sdp"
                        android:text="TERM-I"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_margin="0.3dp"
                        android:layout_weight="1.6"
                        android:background="@color/payment_screen"
                        android:gravity="center_vertical|right"
                        android:paddingRight="@dimen/_5sdp"
                        android:text="TERM-II"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />
                </TableRow>
            </TableLayout>

            <!--<TableLayout-->
                <!--android:id="@+id/table_layout"-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:background="@color/textbox_color"-->
                <!--android:stretchColumns="*"></TableLayout>-->

            <LinearLayout
                android:id="@+id/table_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:background="@color/textbox_color"></LinearLayout>
            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/textbox_color"
                android:stretchColumns="*">

                <TableRow
                    android:id="@+id/tableRow13"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_45sdp"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/pay_now_txtView"
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_margin="0.3dp"
                        android:layout_weight="2"
                        android:background="@color/app_bg"
                        android:gravity="left|center_vertical"
                        android:paddingLeft="@dimen/_5sdp"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_margin="0.3dp"
                        android:layout_weight="1.6"
                        android:background="@color/app_bg">

                        <TextView
                            android:id="@+id/paynow_term1_txt"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_margin="@dimen/_3sdp"
                            android:layout_weight="1"
                            android:background="#3D89CB"
                            android:gravity="center"
                            android:text="PAY NOW"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_margin="0.3dp"
                        android:layout_weight="1.6"
                        android:background="@color/app_bg">

                        <TextView
                            android:id="@+id/paynow_term2_txt"
                            android:layout_width="0dp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_margin="@dimen/_3sdp"
                            android:layout_weight="1"
                            android:background="#3D89CB"
                            android:gravity="center"
                            android:text="PAY NOW"
                            android:textColor="@color/white"
                            android:textSize="@dimen/_10sdp" />
                    </LinearLayout>
                </TableRow>
                <View
                    android:id="@+id/line_view"
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@drawable/list_line"
                    android:visibility="gone"/>
            </TableLayout>

            <TextView
                android:id="@+id/txtNoRecordsUnitTest"
                android:layout_width="@dimen/_200sdp"
                android:layout_height="@dimen/_200sdp"
                android:layout_gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:background="@drawable/norecordfound"
                android:gravity="center"
                android:textColor="@android:color/holo_red_dark"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:visibility="gone" />

            <TextView
                android:id="@+id/payment_history"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_3sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_3sdp"
                android:gravity="left"
                android:text="Summary"
                android:textColor="@color/syllabuscolor"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:visibility="gone" />
            <LinearLayout
                android:id="@+id/main_layout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/headerRel"
                android:layout_marginTop="@dimen/_3sdp"
                android:orientation="vertical">

                <android.support.design.widget.TabLayout
                    android:id="@+id/tablayout_ptm_main"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:background="@color/orange"
                    android:minHeight="?attr/actionBarSize"
                    app:tabIndicatorColor="@color/app_bg"
                    app:tabIndicatorHeight="@dimen/_3sdp"
                    app:tabMaxWidth="0dp"
                    app:tabPaddingStart="@dimen/_10sdp"
                    app:tabPaddingEnd="@dimen/_10sdp"
                    app:tabTextAppearance="@style/MyCustomTabText"
                    app:tabSelectedTextColor="@color/app_bg"
                    app:tabTextColor="@color/app_bg"
                    android:elevation="@dimen/_7sdp"/>
                <View
                    android:id="@+id/view"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_5sdp"
                    android:background="@drawable/dropshadow"
                    android:visibility="gone" />
                <android.support.v4.view.ViewPager
                    android:id="@+id/pager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:scrollbars="vertical" />
            </LinearLayout>
            <LinearLayout
                android:id="@+id/lv_header"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/main_linear_add"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:orientation="horizontal"
                android:visibility="gone">
                <include layout="@layout/payment_list_header" />
            </LinearLayout>
            <android.support.v7.widget.RecyclerView
                android:id="@+id/payment_report_list"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_5sdp"/>


        </LinearLayout>
    </ScrollView>
</LinearLayout>