<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:id="@+id/llHeaderRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="4">

        <TextView
            android:id="@+id/txtDateHeader"
            android:layout_width="0dp"
            android:layout_height="@dimen/_23sdp"
            android:layout_weight="1"
            android:background="@color/orange"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="Date"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp" />
        <TextView
            android:id="@+id/txtSubjectHeader"
            android:layout_width="0dp"
            android:layout_height="@dimen/_23sdp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@color/orange"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="Subject"
            android:textStyle="bold"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/txtMarksGainedHeader"
            android:layout_width="0dp"
            android:layout_height="@dimen/_23sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@color/orange"
            android:gravity="center"
            android:textAllCaps="true"
            android:padding="@dimen/_5sdp"
            android:textStyle="bold"
            android:text="Marks"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/txtTotalMarksHeader"
            android:layout_width="0dp"
            android:layout_height="@dimen/_23sdp"
            android:layout_weight="1"
            android:background="@color/orange"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="Total"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llMiddleRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llHeaderRow"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:weightSum="4"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtDate"
            android:layout_width="0dp"
            android:layout_height="@dimen/_23sdp"
            android:layout_weight="1"
            android:background="@color/linearbg"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="Date"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp" />
        <TextView
            android:id="@+id/txtSubject"
            android:layout_width="0dp"
            android:layout_height="@dimen/_23sdp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@color/linearbg"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="Subject"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp" />

        <TextView
            android:id="@+id/txtMarksGained"
            android:layout_width="0dp"
            android:layout_height="@dimen/_23sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@color/linearbg"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:text="Gained Marks"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp" />

        <TextView
            android:id="@+id/txtMarksTotal"
            android:layout_width="0dp"
            android:layout_height="@dimen/_23sdp"
            android:layout_weight="1"
            android:background="@color/linearbg"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:text="Total Marks"
            android:textColor="@color/black"
            android:textSize="@dimen/_9sdp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/llBottomRow"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/llMiddleRow"
        android:orientation="horizontal"
        android:layout_marginTop="@dimen/_2sdp"
        android:layout_marginBottom="@dimen/_2sdp"
        android:visibility="gone"
        android:weightSum="4">
        <TextView
            android:id="@+id/txtDateInvisibleView"
            android:layout_width="0dp"
            android:layout_height="@dimen/_23sdp"
            android:layout_weight="1"
            android:background="@color/linearbg"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:text="Date"
            android:textColor="@color/black"
            android:visibility="invisible"
            android:textSize="@dimen/_9sdp" />
        <TextView
            android:id="@+id/txtInvisibleView"
            android:layout_width="0dp"
            android:layout_height="@dimen/_23sdp"
            android:layout_weight="1"
            android:layout_marginLeft="@dimen/_5sdp"
            android:background="@color/orange"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:text="Subject"
            android:textStyle="bold"
            android:visibility="invisible"
            android:textAllCaps="true"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/txtTotalMarksGained"
            android:layout_width="0dp"
            android:layout_height="@dimen/_23sdp"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_marginRight="@dimen/_5sdp"
            android:layout_weight="1"
            android:background="@color/orange"
            android:gravity="center"
            android:textAllCaps="true"
            android:padding="@dimen/_2sdp"
            android:textStyle="bold"
            android:text="Marks"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:id="@+id/txtTotalMarks"
            android:layout_width="0dp"
            android:layout_height="@dimen/_23sdp"
            android:layout_weight="1"
            android:background="@color/orange"
            android:gravity="center"
            android:padding="@dimen/_2sdp"
            android:text="Total"
            android:textAllCaps="true"
            android:textStyle="bold"
            android:textColor="@color/white"
            android:textSize="@dimen/_10sdp" />
    </LinearLayout>

    <TextView
        android:id="@+id/txtPercentage"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        android:layout_weight="1"
        android:gravity="right"
        android:padding="@dimen/_5sdp"
        android:layout_below="@+id/llBottomRow"
        android:text="Percentage : 56.67%"
        android:textAllCaps="false"
        android:textStyle="bold"
        android:textColor="@color/selectedButton"
        android:textSize="@dimen/_11sdp"
        android:visibility="gone"/>

</RelativeLayout>