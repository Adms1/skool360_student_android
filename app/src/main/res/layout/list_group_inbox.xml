<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/card_view"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="@dimen/_5sdp"
    card_view:cardBackgroundColor="@color/white"
    card_view:cardCornerRadius="@dimen/_2sdp"
    card_view:cardElevation="2dp"
    card_view:cardUseCompatPadding="true">


    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/_3sdp"
        android:weightSum="2">


        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.04"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/line_txt"
                android:layout_width="@dimen/_5sdp"
                android:layout_height="match_parent"
                android:background="@color/orange" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/llHeader"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1.98"
            android:orientation="vertical"
            android:paddingBottom="@dimen/_1sdp"
            android:visibility="visible">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/subject_inbox_txt"
                    android:layout_width="@dimen/_205sdp"
                    android:layout_height="wrap_content"
                    android:gravity="start"
                    android:padding="@dimen/_5sdp"
                    android:singleLine="false"
                    android:text="Subjectfdggnjhgjknjhurtyriutorelfjkdgnrfurfierjkrjkrjkhfgyefegfherbfgrfyergfrjhefghr"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/day_inbox_txt"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:gravity="start"
                    android:padding="@dimen/_5sdp"
                    android:singleLine="true"
                    android:text=""
                    android:textColor="@color/gray"
                    android:textSize="@dimen/_9sdp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/date_inbox_txt"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="start"
                    android:padding="@dimen/_5sdp"
                    android:singleLine="true"
                    android:text="17/08/2018"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_9sdp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</android.support.v7.widget.CardView>

