<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tool="http://schemas.android.com/tools"
    android:id="@+id/main_linear"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:layout_centerVertical="true">

    <ImageView
        android:id="@+id/event_image_img"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_280sdp"
        android:scaleType="fitXY"
        android:src="@drawable/gallery_placeholder" />

    <TextView
        android:id="@+id/pic_name"
        android:layout_width="@dimen/_280sdp"
        android:layout_height="@dimen/_30sdp"
        android:gravity="start|center_vertical"
        android:paddingLeft="@dimen/_5sdp"
        android:background="@color/black_transfer"
        android:textColor="@color/white"
        android:layout_marginBottom="@dimen/_1sdp"
        app:layout_constraintBottom_toBottomOf="@+id/event_image_img"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        tool:text="Hello Megha" />

</android.support.constraint.ConstraintLayout>