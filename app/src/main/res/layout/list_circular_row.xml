<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:id="@+id/llChildRowDescription"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llHeaderRow"
        android:orientation="vertical">

        <WebView
            android:id="@+id/circular_description_webview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/_25sdp"
            android:padding="@dimen/_5sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:visibility="gone"></WebView>

        <TextView
            android:id="@+id/show_file"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_30sdp"
            android:text="Click here to download"
            android:textColor="@color/blue"
            android:layout_marginLeft="@dimen/_25sdp"
            android:layout_gravity="start"
            android:background="@drawable/blue_line"
            android:gravity="center_vertical"
            android:textSize="@dimen/_12sdp"
            android:layout_marginBottom="@dimen/_5sdp"
            android:visibility="gone"/>
    </LinearLayout>

</RelativeLayout>