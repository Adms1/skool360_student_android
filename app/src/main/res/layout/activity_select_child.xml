<?xml version="1.0" encoding="utf-8"?>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@color/app_bg">

            <include
                android:id="@+id/select_child_header"
                layout="@layout/main_header"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_50sdp" />

            <LinearLayout
                android:id="@+id/select_child_mainstudent_linear"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/select_child_header"
                android:background="@drawable/background_home"
                android:orientation="vertical">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/select_child_profile_image"
                    android:layout_width="@dimen/_80sdp"
                    android:layout_height="@dimen/_80sdp"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:src="@drawable/profile_pic_holder"
                    app:civ_border_color="@color/orange"
                    app:civ_border_width="@dimen/_2sdp" />

                <TextView
                    android:id="@+id/select_child_father_name_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="@dimen/_16sdp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/select_child_email_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:textColor="@color/black"
                    android:gravity="center"
                    android:textSize="@dimen/_11sdp"
                    android:textStyle="normal" />

                <TextView
                    android:id="@+id/select_child_phone_txt"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:textColor="@color/light_blue"
                    android:textSize="@dimen/_11sdp" />

                <TextView
                    android:id="@+id/select_child_chngepaswrd_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="CHANGE PasswORd"
                    android:textAllCaps="true"
                    android:textColor="@color/light_blue"
                    android:textSize="@dimen/_11sdp" />

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/select_child_rvChildlist"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"/>

            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>
