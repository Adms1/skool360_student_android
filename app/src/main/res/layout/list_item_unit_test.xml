<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/row_shape"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_5sdp"
            android:paddingRight="@dimen/_5sdp"
            android:paddingTop="@dimen/_5sdp">

            <TextView
                android:id="@+id/subject_name_txt"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_25sdp"
                android:gravity="center_vertical"
                android:text="Subject Name"
                android:textColor="@color/syllabuscolor"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal" />

            <TextView
                android:id="@+id/syllabus_txt"
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_marginLeft="@dimen/_45sdp"
                android:gravity="center_vertical"
                android:text="@string/syllabus"
                android:textAlignment="center"
                android:textColor="@color/syllabuscolor"
                android:textSize="@dimen/_12sdp"
                android:textStyle="normal" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/syllabus_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:layout_marginLeft="@dimen/_3sdp"
            android:layout_marginRight="@dimen/_4sdp"
            android:background="@color/sent"
            android:orientation="vertical"
            android:visibility="gone"/>
    </LinearLayout>
</LinearLayout>