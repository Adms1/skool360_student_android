<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_5sdp"
    android:background="@android:color/transparent"
    android:orientation="vertical">

    <LinearLayout
        android:id="@id/main_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/_5sdp"
        android:background="@drawable/session_confirm"
        android:orientation="vertical"
        android:weightSum="2">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtStandard_view"
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:text="Standard"
                    android:gravity="center_vertical"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:text=":"
                    android:textColor="@color/blue"
                    android:gravity="center_vertical"
                    android:textSize="@dimen/_12sdp" />

                <Spinner
                    android:id="@+id/standard_spinner"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:background="@drawable/dropdown_button"
                    android:forceHasOverlappingRendering="false"
                    android:gravity="left|center_vertical"
                    android:overlapAnchor="false"
                    android:paddingBottom="1dp"
                    android:paddingTop="@dimen/_3sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"
                    android:visibility="visible"
                    android:spinnerMode="dropdown"
                    android:dropDownVerticalOffset="@dimen/_1sdp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtSection_view"
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:text="Section"
                    android:gravity="center_vertical"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:text=":"
                    android:gravity="center_vertical"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_12sdp" />

                <Spinner
                    android:id="@+id/section_spinner"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:background="@drawable/dropdown_button"
                    android:forceHasOverlappingRendering="false"
                    android:gravity="left|center_vertical"
                    android:overlapAnchor="false"
                    android:paddingBottom="1dp"
                    android:paddingTop="@dimen/_3sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"
                    android:visibility="visible"
                    android:spinnerMode="dropdown"
                    android:dropDownVerticalOffset="@dimen/_1sdp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtStudent_view"
                    android:layout_width="@dimen/_65sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:text="Student"
                    android:gravity="center_vertical"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:layout_width="@dimen/_10sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:text=":"
                    android:gravity="center_vertical"
                    android:textColor="@color/blue"
                    android:textSize="@dimen/_12sdp" />

                <Spinner
                    android:id="@+id/student_spinner"
                    android:layout_width="@dimen/_120sdp"
                    android:layout_height="@dimen/_25sdp"
                    android:layout_marginBottom="@dimen/_3sdp"
                    android:background="@drawable/dropdown_button"
                    android:forceHasOverlappingRendering="false"
                    android:gravity="left|center_vertical"
                    android:overlapAnchor="false"
                    android:paddingBottom="1dp"
                    android:paddingTop="@dimen/_3sdp"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11sdp"
                    android:visibility="visible"
                    android:spinnerMode="dropdown"
                    android:dropDownVerticalOffset="@dimen/_1sdp"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_45sdp"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/_16sdp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/submit_btn"
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginRight="@dimen/_6sdp"
                android:background="@drawable/profile_button"
                android:text="Done"
                android:textAllCaps="true"
                android:textColor="@color/white"
                android:textSize="@dimen/_10sdp"
                android:textStyle="bold" />


        </LinearLayout>
    </LinearLayout>

    <Button
        android:id="@+id/cancel_btn"
        android:layout_width="@dimen/_30sdp"
        android:layout_height="@dimen/_30sdp"
        android:layout_alignRight="@+id/main_linear"
        android:layout_marginRight="-6dp"
        android:background="@drawable/blue_btn"
        android:text="x"
        android:textColor="@color/white"
        android:textSize="@dimen/_15sdp" />
</RelativeLayout>
